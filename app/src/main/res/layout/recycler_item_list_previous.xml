<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/linear_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/ripple_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mrl_rippleDuration="200"
            app:mrl_rippleFadeDuration="50">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                app:cardBackgroundColor="@color/alpha_middle"
                app:cardCornerRadius="4dp">

                <LinearLayout
                    android:id="@+id/linear_cardview_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <ImageView
                            android:id="@+id/iv_card_item"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_gravity="start|center"
                            android:layout_marginBottom="10dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:scaleType="centerInside"
                            android:src="@mipmap/ic_launcher" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_item_description"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Text"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_item_trainer_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:text="Text"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_item_day"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Text"
                                android:textSize="14sp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:weightSum="5">

                                <TextView
                                    android:id="@+id/tv_item_time_start"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:text="Text"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_item_time"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_weight="1"
                                    android:text="-"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_item_time_end"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_weight="2"
                                    android:text="Text"
                                    android:textSize="14sp" />

                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>
        </com.balysv.materialripple.MaterialRippleLayout>
    </LinearLayout>

</layout>