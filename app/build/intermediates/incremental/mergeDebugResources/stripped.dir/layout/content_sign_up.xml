<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                  
                                            

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/content_sign_up_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" tools:showIn="@layout/activity_sign_up">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/background_past_activities" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            android:weightSum="710"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context=".ui.activity.signup.SignUpScreen">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="200"
                android:fontFamily="@font/bebas_neue_regular"
                android:gravity="center"
                android:text="@string/sign_up_header"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:weightSum="20">

                <EditText
                    android:id="@+id/editText_signUp_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_weight="24"
                    android:ems="10"
                    android:fontFamily="@font/bebas_neue_regular"
                    android:hint="@string/hint_name"
                    android:imeOptions="flagNavigateNext"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

                <ImageView
                    android:id="@+id/imageView_signUp_name"
                    android:layout_width="12sp"
                    android:layout_height="12sp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/failure" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:weightSum="20">


                <EditText
                    android:id="@+id/editText_signUp_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_weight="24"
                    android:ems="10"
                    android:fontFamily="@font/bebas_neue_regular"
                    android:hint="@string/hint_phone"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:text="+65"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

                <ImageView
                    android:id="@+id/imageView_signUp_phone"
                    android:layout_width="12sp"
                    android:layout_height="12sp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/failure" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:weightSum="20">

                <EditText
                    android:id="@+id/editText_signUp_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_weight="24"
                    android:ems="10"
                    android:fontFamily="@font/bebas_neue_regular"
                    android:hint="@string/hint_email"
                    android:inputType="textEmailAddress"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

                <ImageView
                    android:id="@+id/imageView_signUp_email"
                    android:layout_width="12sp"
                    android:layout_height="12sp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/failure" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:weightSum="20">

                <EditText
                    android:id="@+id/editText_signUp_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_weight="24"
                    android:ems="10"
                    android:fontFamily="@font/bebas_neue_regular"
                    android:hint="@string/hint_password"
                    android:inputType="textPassword"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

                <ImageView
                    android:id="@+id/imageView_signUp_password"
                    android:layout_width="12sp"
                    android:layout_height="12sp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/failure" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:weightSum="20">

                <EditText
                    android:id="@+id/editText_signUp_password_again"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_weight="24"
                    android:ems="10"
                    android:fontFamily="@font/bebas_neue_regular"
                    android:hint="@string/hint_password_again"
                    android:inputType="textPassword"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

                <ImageView
                    android:id="@+id/imageView_signUp_password_again"
                    android:layout_width="12sp"
                    android:layout_height="12sp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/failure" />
            </LinearLayout>


            <Button
                android:id="@+id/button_signUp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_weight="100"
                android:background="@color/orange_special"
                android:fontFamily="@font/bebas_neue_regular"
                android:text="@string/sign_up"
                android:textColor="@android:color/white" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="260"
                android:contentDescription="@string/image_logo_description"
                android:paddingBottom="5dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:paddingTop="20dp"
                android:src="@drawable/logo" />

        </LinearLayout>
    </FrameLayout>
         